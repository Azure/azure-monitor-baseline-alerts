root = true

[*]
indent_size = 2
indent_style = space
charset = utf-8
end_of_line = lf
trim_trailing_whitespace = true
insert_final_newline = true

[*.{yml,yaml}]
indent_size = 2
indent_style = space
charset = utf-8
end_of_line = lf
trim_trailing_whitespace = true
insert_final_newline = true

[*.json]
indent_size = 2
indent_style = space
charset = utf-8
end_of_line = lf
trim_trailing_whitespace = true
insert_final_newline = true

# Special handling ALZ pattern files
[patterns/alz/policyDefinitions/*.json, patterns/alz4Subs/policyDefinitions/*.json]
generated_code = true
insert_final_newline = false
end_of_line = lf

# All JSON files under services used by ALZ patterns
[services/**/*.json]
generated_code = true
indent_size = 2
indent_style = space
charset = utf-8
end_of_line = crlf
trim_trailing_whitespace = true
insert_final_newline = true

# All other JSON files under services not used by ALZ patterns
[services/**/templates/**/*.json]
generated_code = true
indent_size = 2
indent_style = space
charset = utf-8
end_of_line = lf
trim_trailing_whitespace = true
insert_final_newline = true

[.github/yml-schemas/*.json]
indent_size = 2
indent_style = space
charset = utf-8
end_of_line = lf
trim_trailing_whitespace = true
insert_final_newline = true
